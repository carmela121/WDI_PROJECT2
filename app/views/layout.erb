            <li><a href="/users/<%= current_user.id %>">Profile</a></li>
            <li><a href="/users/<%= current_user.id %>/edit">Edit Profile</a></li>
            <li><a href="/recipes/new">Add Recipe</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </li>
        <% else %>
        <li><a href="/register">Register</a></li>
        <li><a href="/login">Login</a></li>
        <% end %>
      </ul>
    </div>
    <%= styled_flash %>
    <%= yield %>            
    <footer>
      <div class="footer-copyright text-centered ptop10 pull-right">Â© 2016 Foodies.com
