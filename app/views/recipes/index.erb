
<div class="main_box">
<div class="recipes">
  <div class="row">
    <ul>
      <% @recipes.each do |recipe| %>
      <li class="col-lg-3 col-md-4 col-sm-6">
        <ul class="tile">
          <article class="video">
            <figure>
              <a class="fancybox fancybox.iframe" href="https://www.youtube.com/embed/<%= recipe.video_url %>">
                <img class="videoThumb" src="<%= recipe.images %>"></a>
              </figure>
              <a class ="atag" href= "/recipes/<%= recipe.id %>"><%= recipe.title %></a>
            </article>
          </li>
        </ul>
        <% end %>
      </ul>
    </div>
  </div>
</div>
